generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Camera {
  id        String      @id @default(cuid())
  name      String
  location  String
  incidents Incident[]
}

model Incident {
  id           String    @id @default(cuid())
  type         String    // e.g., "Unauthorised Access", "Gun Threat"
  tsStart      DateTime
  tsEnd        DateTime
  resolved     Boolean   @default(false)
  thumbnailUrl String

  camera       Camera    @relation(fields: [cameraId], references: [id])
  cameraId     String
}